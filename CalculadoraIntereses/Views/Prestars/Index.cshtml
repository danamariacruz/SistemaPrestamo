@model IEnumerable<CalculadoraIntereses.Models.Prestar>

@{
    ViewBag.Title = "Inicio";
}

<h2>Prestamos</h2>
<p>
    @using (Html.BeginForm("Index", "Prestars", FormMethod.Get))
    {
    <input type="text" name="buscar" class = "form-control"/>
    <input type="submit" name="buscar" value="Buscar"  class="btn btn-default"/>
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Plazo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Interes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CantidadPrestada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cuota)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IniciodePrestamo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdCliente)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Plazo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Interes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CantidadPrestada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cuota)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IniciodePrestamo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdCliente)
        </td>
        <td>
            @Html.ActionLink("Detalles", "Details", new { id = item.PrestamoID }) |
            @Html.ActionLink("Editar", "Edit", new { id=item.PrestamoID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.PrestamoID })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Nuevo Prestamo", "Create")
</p>
 